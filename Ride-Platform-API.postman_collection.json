{
  "info": {
    "name": "Ride Platform API",
    "description": "Complete API collection for testing Ride Platform microservices",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost",
      "type": "string"
    },
    {
      "key": "auth_port",
      "value": "8081",
      "type": "string"
    },
    {
      "key": "user_port",
      "value": "8086",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth Service",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}:{{auth_port}}/actuator/health",
              "host": ["{{base_url}}"],
              "port": "{{auth_port}}",
              "path": ["actuator", "health"]
            }
          }
        },
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('user_id', response.userId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"phone\": \"+1234567890\"\n}"
            },
            "url": {
              "raw": "{{base_url}}:{{auth_port}}/api/auth/register",
              "host": ["{{base_url}}"],
              "port": "{{auth_port}}",
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', response.accessToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}:{{auth_port}}/api/auth/login",
              "host": ["{{base_url}}"],
              "port": "{{auth_port}}",
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "\"{{refresh_token}}\""
            },
            "url": {
              "raw": "{{base_url}}:{{auth_port}}/api/auth/refresh-token",
              "host": ["{{base_url}}"],
              "port": "{{auth_port}}",
              "path": ["api", "auth", "refresh-token"]
            }
          }
        },
        {
          "name": "Check Email Verified",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}:{{auth_port}}/api/auth/verify-email/{{user_id}}",
              "host": ["{{base_url}}"],
              "port": "{{auth_port}}",
              "path": ["api", "auth", "verify-email", "{{user_id}}"]
            }
          }
        },
        {
          "name": "Send Verification Email",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}:{{auth_port}}/api/auth/send-verification-email/{{user_id}}",
              "host": ["{{base_url}}"],
              "port": "{{auth_port}}",
              "path": ["api", "auth", "send-verification-email", "{{user_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "User Service",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}:{{user_port}}/actuator/health",
              "host": ["{{base_url}}"],
              "port": "{{user_port}}",
              "path": ["actuator", "health"]
            }
          }
        },
        {
          "name": "Test Endpoint",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}:{{user_port}}/test",
              "host": ["{{base_url}}"],
              "port": "{{user_port}}",
              "path": ["test"]
            }
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}:{{user_port}}/all?page=0&size=15",
              "host": ["{{base_url}}"],
              "port": "{{user_port}}",
              "path": ["all"],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "15"
                }
              ]
            }
          }
        },
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newuser@example.com\",\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Smith\",\n  \"phone\": \"+1987654321\"\n}"
            },
            "url": {
              "raw": "{{base_url}}:{{user_port}}",
              "host": ["{{base_url}}"],
              "port": "{{user_port}}"
            }
          }
        }
      ]
    },
    {
      "name": "All Services Health Check",
      "item": [
        {
          "name": "Auth Service Health",
          "request": {
            "method": "GET",
            "url": "{{base_url}}:8081/actuator/health"
          }
        },
        {
          "name": "Booking Service Health",
          "request": {
            "method": "GET",
            "url": "{{base_url}}:8082/actuator/health"
          }
        },
        {
          "name": "Payment Service Health",
          "request": {
            "method": "GET",
            "url": "{{base_url}}:8083/actuator/health"
          }
        },
        {
          "name": "Mail Service Health",
          "request": {
            "method": "GET",
            "url": "{{base_url}}:8084/actuator/health"
          }
        },
        {
          "name": "Pricing Service Health",
          "request": {
            "method": "GET",
            "url": "{{base_url}}:8085/actuator/health"
          }
        },
        {
          "name": "User Service Health",
          "request": {
            "method": "GET",
            "url": "{{base_url}}:8086/actuator/health"
          }
        },
        {
          "name": "Vehicle Service Health",
          "request": {
            "method": "GET",
            "url": "{{base_url}}:8087/actuator/health"
          }
        },
        {
          "name": "Gateway Service Health",
          "request": {
            "method": "GET",
            "url": "{{base_url}}:8080/actuator/health"
          }
        }
      ]
    }
  ]
}

